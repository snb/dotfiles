[user]
    name = Nick Barkas
    email = nick.barkas@gmail.com

[color]
    diff = auto
    status = auto
    branch = auto

[core]
    whitespace = trailing-space,space-before-tab
    autocrlf = input
    safecrlf = true

[branch]
    autosetuprebase = always

[push]
    default = tracking

[alias]
    guilt = "!f(){ git log --pretty='format:%an <%ae>' $@ | sort | uniq -c | sort -rn; }; f"
